<p id="notice"><%= notice %></p>
<p>
  <strong>Baby:</strong>
  <%= @baby %>
</p>

<h2>Resumen Hoy</h2>
<table>
  <thead>
    <tr>
      <th>Cuantas veces</th>
      <th>Ultima vez</th>
      <th>Tiempo</th>
      <th>Cantidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @baby.cuantas_veces %></td>
        <td><%= @baby.last_time %></td>
        <td><%= @baby.tiempo_hoy %></td>
        <td><%= @baby.cantidad_hoy %></td>
      </tr>
  </tbody>
</table>

<h2>Historial Breatsfeedings</h2>

<table>
  <thead>
    <tr>
      <th>Cantidad</th>
      <th>Tiempo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <%  @baby.breatsfeedings.each do |breatsfeeding| %>
      <tr>
        <td><%= breatsfeeding.cantidad %></td>
        <td><%= breatsfeeding.tiempo %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_baby_path(@baby) %> 
<%= link_to 'Back', root_path %>
<%= link_to 'New Breastfeeding', new_breatsfeeding_path %> 
